package animal.droid.activity;

import android.app.Activity;
import android.content.ComponentName;
import android.content.Intent;
import android.content.ServiceConnection;
import android.os.Bundle;
import android.os.IBinder;
import android.os.RemoteException;
import animal.droid.service.IBgmBindService;

/**
 * Activityの共通的な振る舞いを定義するクラスです。
 *
 */
public class BaseActivity extends Activity {
    private IBgmBindService service;
    
    @Override
    public void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        
        Intent intent = new Intent(IBgmBindService.class.getName());
        bindService(intent, conn, BIND_AUTO_CREATE);
    }
    
    @Override
    protected void onPause() {
    	System.out.println("onPause ");
    	super.onPause();
    	try {
			service.stopPlay();
		} catch (RemoteException e) {
			e.printStackTrace();
		}
    }
    
    @Override
    public void onResume() {
    	super.onResume();
    	try {
    		if (service != null) {
    			service.startPlay();
    		}
		} catch (RemoteException e) {
			e.printStackTrace();
		}
    }
    
    private ServiceConnection conn = new ServiceConnection() {
		
		@Override
		public void onServiceConnected(ComponentName name, IBinder binder) {
			service = IBgmBindService.Stub.asInterface(binder);
			try {
				service.startPlay();
			} catch (RemoteException e) {
				e.printStackTrace();
			}
		}
		
		@Override
		public void onServiceDisconnected(ComponentName name) {
			if (service != null) {
				try {
					service.stopPlay();
				} catch (RemoteException e) {
					e.printStackTrace();
				}
			}
		}
	};
}
